<Window x:Class="_04_DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" Text="DockPanel.Dock=Top" Background="Yellow"/>
        <TextBlock DockPanel.Dock="Bottom" Text="DockPanel.Dock=Bottom" Background="Violet"/>
        <TextBlock DockPanel.Dock="Left" Text="DockPanel.Dock=Left" Background="CadetBlue"/>
        <TextBlock DockPanel.Dock="Right" Text="DockPanel.Dock=Right" Background="YellowGreen"/>
        <TextBlock Text="DockPanel.Dock  не установлен" Background="LightGreen"/>
    </DockPanel>
</Window>
