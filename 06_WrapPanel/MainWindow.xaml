<Window x:Class="_06_WrapPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06_WrapPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <WrapPanel Orientation="Horizontal">
        <Rectangle Width="100" Height="100" Fill="Azure"/>
        <Rectangle Width="100" Height="100" Fill="WhiteSmoke"/>
        <Rectangle Width="100" Height="100" Fill="ForestGreen"/>
        <Rectangle Width="100" Height="100" Fill="DarkGoldenrod"/>
        <Rectangle Width="100" Height="100" Fill="DimGray"/>
        <Rectangle Width="100" Height="100" Fill="HotPink"/>
        <Rectangle Width="100" Height="100" Fill="DarkOrange"/>
        <Rectangle Width="100" Height="100" Fill="FloralWhite"/>
    </WrapPanel>
</Window>
